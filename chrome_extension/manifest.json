{
  "manifest_version": 3,
  "name": "HLO Pixels Integration",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://herolab.online/characters/*/1/play/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://herolab.online/characters/*/1/play/*"],
  "action": {
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"  
    },
    "default_popup": "popup.html"
  }
}
